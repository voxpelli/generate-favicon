{
  "name": "@voxpelli/node-cli-template",
  "version": "0.0.0",
  "description": "A GitHub template repo for node cli tools",
  "homepage": "http://github.com/voxpelli/node-cli-template",
  "repository": {
    "type": "git",
    "url": "git://github.com/voxpelli/node-cli-template.git"
  },
  "keywords": [],
  "author": "Pelle Wessman <pelle@kodfabrik.se> (http://kodfabrik.se/)",
  "license": "MIT",
  "engines": {
    "node": "^20.9.0 || >=22.0.0"
  },
  "bin": {
    "node-cli-template": "cli.js"
  },
  "type": "module",
  "files": [
    "cli.js",
    "lib/**/*.js"
  ],
  "scripts": {
    "check:installed-check": "installed-check",
    "check:knip": "knip",
    "check:lint": "eslint",
    "check:tsc": "tsc",
    "check:type-coverage": "type-coverage --detail --strict --at-least 99 --ignore-files 'test/*'",
    "check": "run-p check:*",
    "prepare": "husky",
    "test:mocha": "c8 --reporter=lcov --reporter=text mocha 'test/**/*.spec.js'",
    "test-ci": "run-s test:*",
    "test": "run-s check test:*"
  },
  "dependencies": {
    "@voxpelli/typed-utils": "^1.10.2",
    "markdown-or-chalk": "^0.2.3",
    "peowly": "^1.3.2",
    "pony-cause": "^2.1.11"
  },
  "devDependencies": {
    "@types/chai": "^4.3.20",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.17.11",
    "@voxpelli/eslint-config": "^22.2.0",
    "@voxpelli/tsconfig": "^15.1.1",
    "c8": "^10.1.3",
    "chai": "^4.5.0",
    "eslint": "^9.17.0",
    "husky": "^9.1.7",
    "installed-check": "^9.3.0",
    "knip": "^5.41.1",
    "mocha": "^11.0.1",
    "npm-run-all2": "^7.0.2",
    "type-coverage": "^2.29.7",
    "typescript": "~5.7.3"
  }
}
